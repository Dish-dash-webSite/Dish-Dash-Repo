{
  "compilerOptions": {
    "module": "ESNext", // Change from "commonjs" to "ESNext"
    "target": "ES6", // Upgrade from "es5" to "es6"
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx", // Use "react-jsx" for React 17+ (if using React 17+)
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "types": ["jest", "node"],
  },
  "include": [
    "src/**/*", "setupTests.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}